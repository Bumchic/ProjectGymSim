<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProjectGymSim.SelectDifficulty.Window1"
        Title="Select Difficulty" Width="400" Height="400">
    <Window.Background>
        <ImageBrush Source="avares://GymSim/res/darkgreen.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Game Mode" FontWeight="Bold" FontSize="32" Foreground="#1DB954"
                       HorizontalAlignment="Center"/>
            <Button Name="EasyButton" Width="200" Height="60" FontSize="20" Content="Easy"
                    Background="#1DB954" Foreground="White" FontWeight="Bold" CornerRadius="30" 
                    BorderBrush="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Name="NormalButton" Width="200" Height="60" FontSize="20" Content="Normal"
                    Background="#1DB954" Foreground="White" FontWeight="Bold" CornerRadius="30" 
                    BorderBrush="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Name="HardButton" Width="200" Height="60" FontSize="20" Content="Hard"
                    Background="#1DB954" Foreground="White" FontWeight="Bold" CornerRadius="30" 
                    BorderBrush="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>