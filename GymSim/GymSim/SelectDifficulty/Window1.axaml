<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectGymSim.SelectDifficulty.Window1"
        Title="Select Difficulty" Width="400" Height="200" WindowState="Maximized">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black" Spacing="20">
            <TextBlock Text="Game Mode" FontWeight="Bold" FontSize="32" Foreground="White"
                       HorizontalAlignment="Center"/>
            <Button Name="EasyButton" Margin="5" HorizontalAlignment="Stretch" Height="60" 
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                    FontSize="20" Content="Easy"/>
            <Button Name="NormalButton" Margin="5" HorizontalAlignment="Stretch" Height="60" 
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                    FontSize="20" Content="Normal"/>
            <Button Name="HardButton" Margin="5" HorizontalAlignment="Stretch" Height="60" 
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                    FontSize="20" Content="Hard"/>
        </StackPanel>
    </Grid>
</Window>