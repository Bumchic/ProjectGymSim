<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectGymSim.GamePartView.GameView"
        Title="GameView" KeyDown="SpaceButton_OnKeyDown"
        Background="Black">
        <Panel>
                <Panel Name="ThisPanel">
                        <StackPanel>
                                <TextBlock Name="RepCounter" TextWrapping="Wrap" FontSize="50">
                                        Rep:0
                                </TextBlock>
                                <TextBlock Name="StrengthCounter" TextWrapping="Wrap" FontSize="50">
                                        Strength:100
                                </TextBlock>
                        </StackPanel>
                        <Label HorizontalAlignment="Right" VerticalAlignment="Bottom">Press SpaceBar To Push</Label>
                </Panel>  
                <TextBlock Name="GameOverScreen" HorizontalAlignment="Center" VerticalAlignment="Center"
                           TextAlignment="Center" FontSize="150" Width="10000" Height="200" Foreground="Red"
                           Background="Black" IsVisible="False">
                        Game Over
                </TextBlock>
        </Panel>
        
   
</Window>
